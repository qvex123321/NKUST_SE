<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".Screen_Setting"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/btn_style"
                android:text="儲存" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="設定帳戶*"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/paleturquoise">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="帳戶名稱                               存款餘額"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_account"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/paleturquoise"
                    android:text="+"
                    />
            </LinearLayout>

            <ListView
                android:id="@+id/itlist_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_fixedIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="設定固定收入"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/paleturquoise">

                <TextView
                    android:id="@+id/textVi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="收入描述    收入帳戶    收入金額    幾月幾次    發薪日"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_fixedIncome"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/paleturquoise"
                    android:text="+"
                    />
            </LinearLayout>

            <ListView
                android:id="@+id/itlist_fixedIncome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_fixedBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="設定固定帳單"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/paleturquoise">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="帳單描述  支出帳戶  支出金額  幾月幾次    付款日"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_fixedBill"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/paleturquoise"
                    android:text="+"
                    />
            </LinearLayout>

            <ListView
                android:id="@+id/itlist_fixedBill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txv_bill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="設定帳單"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@color/paleturquoise">

                <TextView
                        android:id="@+id/te"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="帳單描述    幾月幾次    付款日"
                        android:textColor="@color/black" />

                <Button
                        android:id="@+id/btn_bill"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/paleturquoise"
                        android:text="+"
                        />
            </LinearLayout>

            <ListView
                android:id="@+id/itlist_bill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txv_costLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="每日金額上限提醒:"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edt_costLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:inputType="number"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>